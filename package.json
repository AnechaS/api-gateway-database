{
  "name": "optimus-postgresql",
  "private": true,
  "version": "1.0.0",
  "description": "system external connection",
  "main": "main.js",
  "scripts": {
    "start": "npm run webpack && electron .",
    "start-dev": "set ELECTRON_DEVELOP=1 && npm run webpack && electron .",
    "webpack": "webpack --mode production",
    "webpack-w": "webpack --mode development -w",
    "build": "npm run clean && npm run webpack && build -p never",
    "release": "npm run clean && npm run webpack && build -p always",
    "clean": "npm run clean-build && npm run clean-webpack",
    "clean-webpack": "rm -rf ./dist",
    "clean-build": "rm -rf ./build",
    "test": "jest",
    "lint": "eslint .",
    "start-mock-server": "node ./__mocks__/server.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "react",
    "sqlite3",
    "postgresql",
    "socket.io",
    "request"
  ],
  "author": "Anachitheu.k@gmail.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anechasun/optimus-postgresql.git"
  },
  "homepage": "https://github.com/Anechasun/optimus-postgresql.git#readme",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.10.2",
    "bootstrap": "^4.1.3",
    "jquery": "^3.3.1",
    "pg": "^7.4.3",
    "popper.js": "^1.14.4",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "request": "^2.88.0",
    "socket.io": "^2.2.0",
    "sqlite3": "^4.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^24.9.0",
    "babel-loader": "^7.1.5",
    "css-loader": "^1.0.0",
    "electron": "^2.0.6",
    "electron-builder": "^20.26.1",
    "electron-rebuild": "^1.8.2",
    "eslint": "^5.3.0",
    "eslint-plugin-react": "^7.10.0",
    "express": "^4.17.1",
    "file-loader": "^1.1.11",
    "jest": "^24.9.0",
    "prettier": "^1.14.0",
    "react-test-renderer": "^16.9.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "build": {
    "appId": "com.electron.optimus",
    "productName": "optimus",
    "directories": {
      "output": "build/"
    },
    "files": [
      "node_modules/",
      "dist/",
      "renderer/",
      "resources/",
      "utils/",
      "Connection.js",
      "main.js",
      "config.js",
      "package.json"
    ],
    "win": {
      "icon": "resources/icon.png",
      "target": [
        "nsis"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Anechasun",
        "repo": "optimus-postgresql"
      }
    ]
  }
}
